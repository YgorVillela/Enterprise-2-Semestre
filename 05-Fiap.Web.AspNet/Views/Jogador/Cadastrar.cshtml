@model Jogador

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form asp-action="cadastrar">
    <div class="form-group">
        <input asp-for="Nome" class="form-control" placeholder="Nome do Jogador" />
    </div>
    <div class="form-group">
        <input asp-for="Altura" class="form-control" placeholder="Altura do Jogador" />
    </div>
    <div class="form-group">
        <input asp-for="DataNascimento" class="form-control" placeholder="Data de Nascimento" />
    </div>
    <div class="form-group">
        <select asp-for="TimeId" asp-items="@ViewBag.Times" class="form-control">
            <option value="0">Times...</option>
        </select>
    </div>
    
    <input type="submit" value="Cadastrar" class="img-thumbnail bn-primary" />

</form>